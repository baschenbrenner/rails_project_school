<% if session[:user_type] == "student" %>
<h1>Student Schedule</h1>

<%= render partial: '/courses/course', collection: @courses  %>

<a href="javascript:showAllCourses()" data-role="button">Get List of All Courses</a>

<% end %>

<% if session[:user_type] == "teacher" %>
<h1>Teacher Schedule</h1>
<div class="flexbox-container">
  <div>
    <%= render partial: '/courses/course', collection: @courses  %>
  </div>
  <div>
    <h3>Student List</h3>
    <div id="studentList"></div>
  </div>
</div>
<% end %>


<div id="course-list"></div>


<script id="course-template" type="text/x-handlebars-template">
  <div id="course">
    <h3><a href="/courses/{{id}}">{{title}}</a></h3>
    <p>{{description}}</p>
    <ul>
      <li>Catalog Number: {{catalog_number}}</li>
      <li>Meeting Time and Day: {{day_time_meeting}}</li>
      <li>Room Number: {{room_number}}</li>
      <li> <a href="/teachers/{{teacher_id}}">Find out more about who is teaching this class</a></li>
    </ul>
  </div>
</script>

<script id="student-course-template" type="text/x-handlebars-template">
  <div id="course-detail">
    <p>Description: {{description}}</p>
    <ul>
      <li>Meeting Time and Day: {{day_time_meeting}}</li>
      <li>Room Number: {{room_number}}</li>
    </ul>
  </div>
</script>
